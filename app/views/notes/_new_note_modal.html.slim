#newNoteModal.modal.hide.fade role="dialog"
  .modal-header
    button.close type="button" data-dismiss="modal" Ã—
    h3= t('.title')
  .modal-body
    .row-fluid
      = form_tag survey_contact_response_notes_path(survey_id: survey_id, contact_id: contact_id, response_id: response_id), id: 'new-note', remote: true, class: 'form-horizontal' do
        = text_area_tag :note, nil, rows: 5, placeholder: t('.type_your_note')
