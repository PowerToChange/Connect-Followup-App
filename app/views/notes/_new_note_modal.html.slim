#newNoteModal.modal.hide.fade role="dialog"
  .modal-header
    button.close type="button" data-dismiss="modal" Ã—
    h3 Add a Note
  .modal-body
    .row-fluid
      = form_tag survey_contact_notes_path(survey_id: survey_id, contact_id: contact_id), id: 'new-note', remote: true, class: 'form-horizontal' do
        = text_area_tag :note, nil, rows: 5, placeholder: 'Type your note'
  .modal-footer
    = link_to 'Close', '#', data: { dismiss: 'modal' }, class: 'btn'
    = submit_tag 'Add Note', form: 'new-note', class: 'btn btn-primary'