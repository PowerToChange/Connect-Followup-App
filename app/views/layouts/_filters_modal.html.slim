#filterModal.modal.hide.fade style="display: none;" role="dialog"
  .modal-header
    button.close type="button" data-dismiss="modal" Ã—
    h3 = t('filters.filter_options')

  = simple_form_for :filters, url: url, html: { id: 'filters', class: 'form-horizontal filters', method: :get } do |f|
    .modal-body
      strong = filter_select_for_attribute(f, :target_contact_relationship_contact_id_b, label: t('school'))
      strong = filter_select_for_attribute(f, :priority_id, label: t('followup_priority'))
      hr
      = filter_select_for_attribute(f, :target_contact_gender_id, label: t('gender'))
      = filter_select_for_attribute(f, CiviCrm.custom_fields.contact.year, label: t('year_in_school'))
      = filter_select_for_attribute(f, :assignee_contact_id, label: t('assigned')) unless local_assigns[:filters].try(:[], :assignee_contact_id) == false
      - if local_assigns[:survey].present?
        - survey.fields.with_option_group.sort_by(&:label).reject { |field| field.field_name.to_sym == CiviCrm.custom_fields.contact.year }.each do |field|
          = filter_select_for_attribute(f, field.field_name, label: field.label)
      = field_text_field_for_attribute(f, :target_contact_first_name, label: t('first_name'), placeholder: t('exact_match'))
      = field_text_field_for_attribute(f, :target_contact_last_name, label: t('last_name'), placeholder: t('exact_match'))

  .modal-footer
    button.btn.btn-responsive-size data-dismiss="modal" = t('close')
    = submit_tag t('filters.filter'), class: 'btn btn-primary btn-responsive-size', form: 'filters'