$ ->
  $('.toggle-completed-leads').prop('checked', false)
  $('.toggle-completed-leads').on 'click', (e) ->
    toggle_completed_leads(e.target)


toggle_completed_leads = (target) ->
  leads = $('ul.contacts li[data-status-id="<%= Lead::COMPLETED_STATUS_ID %>"]')
  if $(target).is(':checked')
    leads.show()
  else
    leads.hide()
